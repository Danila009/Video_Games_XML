<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="src_image_background" format="reference" />

    <attr name="games_count" format="string" />

    <attr name="video_game_one_text" format="string" />
    <attr name="video_game_one_count" format="string" />

    <attr name="video_game_two_text" format="string" />
    <attr name="video_game_two_count" format="string" />

    <attr name="video_game_three_text" format="string"/>
    <attr name="video_game_three_count" format="string" />

    <declare-styleable name="PersonInfoView">
        <attr name="src_image_background"/>
        <attr name="src_person_photo" format="reference" />

        <attr name="person_name" format="string" />
        <attr name="person_positions" format="string" />

        <attr name="games_count"/>

        <attr name="video_game_one_text"/>
        <attr name="video_game_one_count"/>

        <attr name="video_game_two_text"/>
        <attr name="video_game_two_count"/>

        <attr name="video_game_three_text"/>
        <attr name="video_game_three_count"/>
    </declare-styleable>

    <declare-styleable name="CardInfoView">

        <attr name="src_image_background"/>

        <attr name="title" format="string"/>

        <attr name="games_count"/>

        <attr name="video_game_one_text"/>
        <attr name="video_game_one_count"/>

        <attr name="video_game_two_text"/>
        <attr name="video_game_two_count"/>

        <attr name="video_game_three_text"/>
        <attr name="video_game_three_count"/>
    </declare-styleable>

    <declare-styleable name="VideoGameCardInfoView">

        <attr name="video_game_image" format="reference"/>
        <attr name="video_game_platform_windows" format="boolean"/>
        <attr name="video_game_platform_ps" format="boolean"/>
        <attr name="video_game_platform_xbox" format="boolean"/>
        <attr name="video_game_platform_nintendo" format="boolean"/>
        <attr name="video_game_platform_android" format="boolean"/>
        <attr name="video_game_platform_ios" format="boolean"/>
        <attr name="video_game_platform_linux" format="boolean"/>
        <attr name="video_game_metacritic_rating" format="string"/>
        <attr name="video_game_title" format="string"/>
        <attr name="video_game_release_date" format="string"/>
        <attr name="video_game_genres" format="string"/>
        <attr name="video_game_stores" format="string"/>

    </declare-styleable>
</resources>